{% extends "::base.html.twig" %}

{% block title %}MLBBundle:Table:tableCreate{% endblock %}

{% block body %}
<h1>Welcome to the Table:tableCreate page</h1>


<div class="row">
  <div class="col-xs-6 col-md-3"></div>
  <div class="col-xs-6 col-md-6"><h1>MLB games Schedule</h1></div>
  <div class="col-xs-6 col-md-3"></div>
</div>

<table class="table table-bordered">
   <tr>
        <td>дата</td>
        <td>аббревиатура_команды_хозяева</td>
        <td>аббревиатура_команды_гости</td>
        <td>id_стадиона</td>
    </tr>
    {% for data in mlbData %}
        <tr>
            <td>{{ data.Day }}</td>
            <td>{{ data.HomeTeam }}</td>
            <td>{{ data.AwayTeam }}</td>
            <td>{{ data.StadiumID }}</td>
        </tr>
    {% endfor %}
  
</table>
{% endblock %}